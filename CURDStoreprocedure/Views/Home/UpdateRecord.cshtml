
@{
    ViewBag.Title = "UpdateRecord";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width" />
    <title>Update Record</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h2>UpdateRecord</h2>
    @{
        foreach (System.Data.DataRow item in ViewBag.empRecord.Rows)
        {
            <form method="post">
                <label for="name">Name:</label>
                <input type="text" value="@item["Name"]" id="name" name="Name" required>

                <label for="address">Address:</label>
                <input type="text" value="@item["Address"]" id="address" name="Address" required>

                <label for="city">City:</label>
                <input type="text" value="@item["City"]" id="city" name="City" required>

                <label for="pin_code">Pin_Code:</label>
                <input type="text" value="@item["Pin_Code"]" id="pin_code" name="Pin_Code" required>

                <label for="designation">Designation:</label>
                <input type="text" value="@item["Designation"]" id="designation" name="Designation" required>

                <input type="submit" value="Submit">
            </form>

        }
    }

    @{
        if (TempData["msg"] != null)
        {
            <script>Alert("@TempData["msg"]"</script>
        }
    }
</body>
</html>




